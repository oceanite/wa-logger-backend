{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "index.js"
      }
    ],
    "static": [
      {
        "source": "uploads",
        "destination": "/uploads"
      }
    ],
    "rewrites": [
      { "source": "/uploads/(.*)", "destination": "/api/uploads/$1" }
    ],
    "headers": [
      {
        "source": "/uploads/(.*)",
        "headers": [
          { "key": "X-Content-Type-Options", "value": "nosniff" }
        ]
      }
    ]
  }
